{% extends 'base.html.twig' %}

{% block title %}Détail Employé{% endblock %}

{% block body %}
    <h1>Détail Employé</h1>
    
    <h2>{{ employe }}</h2>
    <p>
        Entreprise : <a href="{{ path('show_entreprise',{'id': employe.entreprise.id})}}">{{ employe.entreprise.raisonSocial }}</a><br>
        Ville :
        {% if employe.ville != null %}
            {{ employe.ville}}
        {% else %}
            aucune ville renseignée
        {% endif %}<br>
        Date de Naissance : {{ employe.dateNaissance|date("d/m/Y")}}<br>
        Age : {{ employe.age }}<br>
        Date d'Embauche : {{ employe.dateEmbauche|date("d/m/Y")}}
    </p>
{% endblock %}